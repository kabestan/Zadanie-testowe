<Window x:Class="DesktopApp.ButtonDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopApp"
        mc:Ignorable="d"
        Title="RCP importer" Height="180" Width="320" WindowStartupLocation="Manual" ResizeMode="NoResize" MinWidth="220" MinHeight="100">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
            <GradientStop Color="#FF878787" Offset="1"/>
            <GradientStop Color="#FFE4E4E4"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Button x:Name="TheButton" Margin="0,0,10,10" Click="Button_Click" HorizontalAlignment="Right" Width="101" Height="22" VerticalAlignment="Bottom" IsDefault="True" Content="Select"/>
        <TextBlock x:Name="TheText" Margin="10,10,10,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="105"><Run Text="Hello there"/><Run Text=". Select file to "/><Run Text="import"/><Run Text="..."/></TextBlock>
    </Grid>
</Window>
